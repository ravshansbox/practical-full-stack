{
  "name": "@cloudretail/api",
  "private": true,
  "types": "./src/types.ts",
  "scripts": {
    "build": "babel --extensions .js,.ts --ignore node_modules --out-dir dist .",
    "docker:compose:up": "docker compose up",
    "lint": "eslint --fix .",
    "prisma:db:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "start:server": "nodemon -r dotenv/config src",
    "start": "npm-run-all -s prisma:generate prisma:db:push start:server"
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "@trpc/server": "^11.0.0-rc.332",
    "date-fns": "^3.6.0",
    "winston": "^3.13.0",
    "winston-mongodb": "^5.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.12.1",
    "typescript": "^5.4.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "nodemonConfig": {
    "exec": "babel-node --extensions .ts",
    "ext": "ts",
    "watch": [
      "src"
    ]
  }
}
